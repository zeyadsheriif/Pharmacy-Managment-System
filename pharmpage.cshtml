                    </ul>
                </nav>
            </div>
            <div class="icons">
                <a href="#" class="icons-btn d-inline-block js-search-open"><span class="icon-search"></span></a>
                <a href="/mycart" class="icons-btn d-inline-block bag">
                    <span class="icon-shopping-bag"></span>
                    <span class="number">2</span>
                </a>
                <a href="#" class="site-menu-toggle js-menu-toggle ml-3 d-inline-block d-lg-none">
                    <span class="icon-menu"></span>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/Index">Home</a> <span class="mx-2 mb-0">/</span>
                <strong class="text-black">Seeing my Medicine</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <h1>Medicine info</h1>
        <br />
        <p>Total number of medicines is @Model.my_table.Rows.Count</p>
        
        <br />
        <a class=" btn btn-primary mr-4" asp-page="showmed">Show certain Medicine</a>
        <a class=" btn btn-success mr-4" asp-page="updatemed">Update Medicine</a>
        <a class=" btn btn-success mr-4" asp-page="insertmed">Insert Medicine</a>
        <a class=" btn btn-danger mr-4" asp-page="deletemed">Delete Medicine</a>

        <br />
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Medicine ID</th>
                    <th scope="col">Medicine name</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Dose</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                </tr>
            </thead>
            <tbody>
                @for(int i = 0; i < @Model.my_table.Rows.Count; i++)
        {
            <tr>
                <th scope="row">@i</th>
                @for(int j = 0; j < Model.my_table.Columns.Count; j++)
                {
                    <td>@Model.my_table.Rows[i][j]</td>
                }
            </tr>
        }
            </tbody>
        </table>
    </div>
</div>
