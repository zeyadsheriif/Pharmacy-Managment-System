                <input type="text" class="form-control" placeholder="Search keyword and hit enter...">
            </form>
        </div>
    </div>

    <div class="container">
        <div class="d-flex align-items-center justify-content-between">
            <div class="logo">
                <div class="site-logo">
                    <a asp-page="Index" class="js-logo-clone">Pharma</a>
                </div>
            </div>
            <div class="main-nav d-none d-lg-block">
                <nav class="site-navigation text-right text-md-center" role="navigation">
                    <ul class="site-menu js-clone-nav d-none d-lg-block">
                        <li><a asp-page="Index">Home</a></li>
                        <li><a href="/myshop">Store</a></li>
                        <li class="has-children">
                            <a href="#">Dropdown</a>
                            <ul class="dropdown">
                                <li><a href="signin">Sign in</a></li>
                                <li class="has-children">
                                    <a href="#">Log in</a>
                                    <ul class="dropdown">
                                        <li><a href="login">As Admin</a></li>
                                        <li><a href="Index">As User</a></li>
                                        <li><a href="loginpharm">As Pharmacist</a></li>

                                    </ul>
                                </li>


                            </ul>
                        </li>

                        <li><a href="/Index1">About</a></li>
                        <li class="active"><a href="/myreview">Review</a></li>
                    </ul>
                </nav>
            </div>
            <div class="icons">
                <a href="#" class="icons-btn d-inline-block js-search-open"><span class="icon-search"></span></a>
                <a href="/mycart" class="icons-btn d-inline-block bag">
                    <span class="icon-shopping-bag"></span>
                    <span class="number">2</span>
                </a>
                <a href="#" class="site-menu-toggle js-menu-toggle ml-3 d-inline-block d-lg-none">
                    <span class="icon-menu"></span>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/Index">Home</a> <span class="mx-2 mb-0">/</span>
                <strong class="text-black">Review</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="h3 mb-5 text-black font-weight-bold fs-1">Create Review</h1>
                
                <hr>
                
            </div>
            
            
            <div class="col-md-12">
                
                

                <div class="star_rating ">
                    <h3 class="h3 mb-5 text-black ">Overall rating</h3>
                    <button class="star">&#9734;</button>
                    <button class="star">&#9734;</button>
                    <button class="star">&#9734;</button>
                    <button class="star">&#9734;</button>
                    <button class="star">&#9734;</button>
                </div>
                <hr />
            </div>
            <br />
           <div class="col-md-12">
            <label class="form-label ">Add a headline</label>
            <input type="text" placeholder="What is most important to know?" class="form-control" >
            <hr>
           </div>
            <br>
            <div class="col-md-12">
            <label  class="form-label">Add a written review</label>
            <textarea   cols="30" rows="7" class="form-control "placeholder="What did you you like or dislike"></textarea>
            <hr>
            </div>

            <a class=" btn btn-primary mr-4" asp-page="thankyou">Submit</a>
        </div>
    </div>
</div>




